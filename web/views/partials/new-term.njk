<div class="mt-5">
  <h2 class="title is-4">إضافة مصطلح جديد</h2>
  <form
    action="/term/{{ term.id }}"
    method="POST"
    class="p-3 mt-4 has-background-info-light"
  >
    <div class="field">
      <label class="label">المصطلح بالإنجليزية</label>
      <div class="control">
        <input
          class="input"
          type="text"
          name="en"
        >
      </div>
    </div>

    <div class="field">
      <label class="label">المقابل العربي</label>
      <div class="control">
        <input
          class="input"
          type="text"
          name="ar"
        >
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button type="submit" class="button is-link">إرسال</button>
      </div>
      <div class="control">
        <button type="reset" class="button is-link is-light">إلغاء</button>
      </div>
    </div>
  </form>
</div>